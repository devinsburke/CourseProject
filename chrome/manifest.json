{
  "name": "Terse",
  "description": "Document summation for Google Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "web_accessible_resources": [{
    "resources": ["images/icon48x48.png"],
    "matches": ["<all_urls>"]
  }],
  "options_page": "options/options.html",
  "background": {
    "service_worker": "install.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
	"run_at": "document_idle",
    "css": [
      "style.css",
      "injected/injected.css"
    ],
    "js": [
		"terse/language-processing.js",
		"terse/sentence-document.js",
		"terse/page-content.js",
    "terse/processor.js",
		"injected/injected.js"
	]
  }],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/images/icon16x16.png",
      "32": "/images/icon32x32.png",
      "48": "/images/icon48x48.png",
      "128": "/images/icon128x128.png"
    }
  },
  "icons": {
    "16": "/images/icon16x16.png",
    "32": "/images/icon32x32.png",
    "48": "/images/icon48x48.png",
    "128": "/images/icon128x128.png"
  }
}